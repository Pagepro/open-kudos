{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "typeRoots": ["./@types", "node_modules/@types"],
    },
    "exclude": [
        "node_modules",
        "@types"
    ]
}
