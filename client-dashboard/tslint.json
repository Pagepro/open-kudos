{
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts"
        ]
    },
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "max-line-length": [
            true, {"limit": 80, "ignore-pattern": "^import |^export {(.*?)}"}
        ]
    }
}
